<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".SettingActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/back_button"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/bubble_background"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        app:srcCompat="@drawable/bubble"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/ball_background"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/bubble_background"
        app:srcCompat="@drawable/basketball_background"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/bubble_background"
        app:srcCompat="@drawable/horizontal_line" />

    <ImageView
        android:id="@+id/easy_image"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/horizontal_line"
        app:srcCompat="@drawable/easy_button"
        android:clickable="true" />

    <ImageView
        android:id="@+id/medium_image"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/easy_image"
        app:srcCompat="@drawable/medium_button"
        android:clickable="true" />

    <ImageView
        android:id="@+id/hard_image"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@id/medium_image"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/hard_button"
        android:clickable="true" />


</RelativeLayout>